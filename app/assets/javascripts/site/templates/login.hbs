<div class="overlay">
    <div class="lightbox">
        <div class="right">
            
            <div class="logo">
                <img {{bind-attr src=options.club.logo}} />
            </div>

            <form class="box" {{action 'authenticate' on='submit'}}>
                <h2>{{club.pageHeadline}}</h2>
                <p>{{club.altHeadline}}</p>

                <div id="club-login">
                    {{input type="text" autocomplete="off" placeholder="הקלד קוד כניסה" value=clubident}}
                    <button {{action 'authenticate'}}>כניסה <i class="fa fa-arrow-circle-o-left "></i></button>
                </div>

                {{#if error}}
                    <div class="error">{{error}}</div>
                {{/if}}
                
            </form>

            <ul class="creditcard-icons">
                <li>
                    <img src="img/site/visa.png" />
                </li>
                <li>
                    <img src="img/site/mastercard.png" />
                </li>
                <li>
                    <img src="img/site/americanexpress.png" />
                </li>
                <li>
                    <img src="img/site/isracard.png" />
                </li>
                <li>
                    <img src="img/site/dinersclub.png" />
                </li>
            </ul>
            
        </div>

        <div class="left">
            <div class="logo">
                <img src="img/site/logo.png" />
            </div>
            {{!-- <p>{{club.pageDescription}}</p> --}}
            <img src="img/site/loginimg.png" />
        </div>
    </div>
</div>