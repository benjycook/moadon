<div class="overlay">
    <div class="lightbox checkout">
        <div class="close" {{action 'closeModel'}}>&times;</div>

				<h2 class="lightbox-title">קופה</h2>

				{{#if error}}
				    <div class="error">{{error}}</div>
				{{/if}}

				<form class="box" {{action 'checkout' on='submit'}}>

						<h3>
							כרטיס האשראי שלך יחוייב בסכום כולל של ‎405‏&rlm;₪
						</h3>

				    <div class="form-group">
				        {{input type="text" placeholder="מספר כרטיס" value=cardNumber}}
				    </div>

				    <div class="row">

					    <div class="form-group exp">
					        {{input type="text" placeholder="תקוף" value=cardExp}}
					    </div>

					    <div class="form-group cvv">
					        {{input type="text" placeholder="CVV" value=cvv}}
					    </div>
					  
					  </div>

				    <div class="form-group">
				        {{input type="text" placeholder="שם מלא של בעל הכרטיס" value=ownerName}}
				    </div>

				    <div class="form-group">
				        {{input type="text" placeholder="תעודת זהות של בעל הכרטיס" value=ownerId}}
				    </div>



				    <div class="form-group">
				        {{input type="text" placeholder="תשלומים" value=numberOfPayments}}
				    </div>

						<button {{action 'openCart'}}>חזור לסל</button>
				    <button {{action 'checkout'}}>שלם</button>
				    
				</form>

    </div>
</div>