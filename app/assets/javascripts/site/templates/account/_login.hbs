<h2 class="lightbox-title">כניסה</h2>

{{#if error}}
    <div class="error">{{error}}</div>
{{/if}}

<form class="box" {{action 'login' on='submit'}}>

    
    <div class="form-group">
        {{input type="text" placeholder="דואר אלקטרוני" value=email}}
    </div>

    <div class="form-group">
        {{input type="text" placeholder="סיסמא" value=password}}
    </div>

    <button {{action 'login'}}>התחבר</button>
    <button {{action 'openRegister'}}>הרשמה</button>

</form>
