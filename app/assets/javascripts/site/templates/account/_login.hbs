<form class="box" {{action 'login' on='submit'}} autocomplete="on">

    <h2>כניסה</h2>

    {{#if error}}
        <div class="alert error">
            <div class="close">&times;</div>
            {{error}}
        </div>
    {{/if}}
    
    <div class="form-group">
        {{input type="text" placeholder="דואר אלקטרוני" value=email}}
    </div>

    <div class="form-group">
        {{input type="text" placeholder="סיסמא" value=password}}
    </div>
    <div>
        <label {{action 'openPassReminder'}} class="forgotPass">שכחתי סיסמא &gt;&gt;</label>
    </div>
    <button {{action 'login'}}>התחבר</button>
    <button {{action 'openRegister'}}>הרשמה</button>

</form>
