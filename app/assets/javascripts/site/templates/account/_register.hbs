{{#ui-form class="box" action='register'}}

    <h2>הרשמה</h2>

    {{#if error}}
        <div class="alert error">
            <div class="close">&times;</div>
            {{error}}
        </div>
    {{/if}}

    <div class="form-group">
        {{input type="text" placeholder="שם פרטי" value=firstName required="required"}}
    </div>

    <div class="form-group">
        {{input type="text" placeholder="שם משפחה" value=lastName required="required"}}
    </div>

    <div class="form-group">
        {{input type="text" placeholder="דואר אלקטרוני" value=email required="required" data-parsley-type='email'}}
    </div>

    <div class="form-group">
        {{input type="text" placeholder="נייד" value=mobile required="required" data-parsley-mobile="mobile"}}
    </div>

    <div class="form-group">
        {{input type="text" placeholder="סיסמא" value=password required="required"}}
    </div>
    <button {{action 'openLogin'}} type="button">חזור</button>
    <button type="submit">הרשם</button>
    

{{/ui-form}}