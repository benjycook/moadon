<form class="box myinfo" {{action 'update' on='submit'}}>
	<div class="form-group">
        {{input type="text" placeholder="שם פרטי" value=model.firstName}}
        {{input type="text" placeholder="שם משפחה" value=model.lastName}}
    </div>

    <div class="form-group">
        {{input type="text" placeholder="דואר אלקטרוני" value=model.email}}
        {{input type="text" placeholder="נייד" value=model.mobile}}
    </div>

    <div class="form-group">
        {{input type="text" placeholder="סיסמא" value=model.password}}
        <button type="submit" >שמור</button>
    </div>
</form>
