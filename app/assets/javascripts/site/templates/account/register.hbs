<div class="overlay">
    <div class="lightbox register">
        <div class="close" {{action 'close'}}>&times;</div>
        

        <h2 class="lightbox-title">הרשמה</h2>

        <form class="box" {{action 'register' on='submit'}}>

            <div class="form-group">
                {{input type="text" placeholder="שם פרטי" value=firstname}}
            </div>

            <div class="form-group">
                {{input type="text" placeholder="שם משפחה" value=lastname}}
            </div>

            <div class="form-group">
                {{input type="text" placeholder="דואר אלקטרוני" value=email}}
            </div>

            <div class="form-group">
                {{input type="text" placeholder="נייד" value=mobile}}
            </div>

            <div class="form-group">
                {{input type="text" placeholder="סיסמא" value=password}}
            </div>

            {{#if error}}
                <div class="error">{{error}}</div>
            {{/if}}
            <button {{action 'register'}}>הרשם <i class="fa fa-arrow-circle-o-left "></i></button>
            
        </form>
    </div>
</div>