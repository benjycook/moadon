

{{#each supplier in model itemController="supplier"}}

    <div class="box">
        <div class="inner">
            <label>אטרקציות</label>
            <img {{bind-attr src="supplier.image"}} />
            <h2>{{supplier.supplierName}}</h2>
            <address>
                {{supplier.regionName}}, {{supplier.cityName}}
                <br />
                {{supplier.phone1}}
            </address>
            <div class="info">
                <span>25% הנחה</span>
                {{#link-to 'supplier' supplier.id class="button"}}לפרטים{{/link-to}}
            </div>
        </div>
    </div>

{{/each}}

{{#search-scroll content=model hasMore=hesMore}}
    <div class="spinner">
        <div class="rect1"></div>
        <div class="rect2"></div>
        <div class="rect3"></div>
        <div class="rect4"></div>
        <div class="rect5"></div>
    </div>
{{/search-scroll}}

