<div class="box mini-site">
	<div class="inner">

		<div class="header">

			<div class="right">

				<div class="top">
					<h2 class="title">{{supplierName}}</h2>
					<h2 class="subtitle">{{altHeadline}}</h2>
					<address>
						{{regionName}}, {{cityName}}
						<br />
						{{phone1}}, {{phone2}}, {{phone3}}
					</address>
				</div>
				<div class="center">
					<p>
						<strong>שעות פעילות:</strong><br />
						{{workingHours}}
					</p>
				</div>
				<div class="bottom">
					<p>
						<strong>מתאים לגילאים:</strong><br />
						{{ageDevision}}
					</p>
				</div>

			</div>

			<img {{bind-attr src=image}} />

		</div>

		<ul class="items">
			{{#each item in items itemController="item"}}
				<li>
					<div class="name">{{item.name}}<br />{{item.shortDescription}}</div>
					<div class="description">{{item.description}}</div>
					{{#ui-qty count=item.count class="count"}}{{/ui-qty}}
					<div class="price">
						<label>מחיר לאחר הנחה</label>
						<span class="discount">₪{{item.clubPriceTotal}}</span>
						<span class="list">₪{{item.listPriceTotal}}</span>
					</div>
					<div class="order">
						<button class="btn" {{action 'addItemAndOpenCart'}}>לקניה</button>
						<button class="btn" {{action 'addItem'}}>הוסף לסל</button>
					</div>
				</li>
			{{/each}}
		</ul>

		<div class="gallery">
			<ul class="gallery-images">
				{{#each image in images}}
					<li><img {{bind-attr src=image}} />
				{{/each}}
			</ul>
		</div>

		<div class="content">
			{{{miniSiteContext}}}
		</div>

	</div>
</div>