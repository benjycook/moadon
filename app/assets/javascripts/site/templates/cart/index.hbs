<div class="overlay">
    <div class="lightbox cart">
        <div class="close" {{action 'closeCart'}}>&times;</div>
        

        <h2 class="lightbox-title">סל הקניות שלי</h2>
        {{#if cart.hasItems}}
        <ul class="items cart-items">
            {{#each item in cart}}
                <li>

                    <div class="info">
                        <h3 class="name">{{item.name}}</h3>
                        <p class="description">{{item.description}}</p>
                    </div>

                    {{ui-qty count=item.count class="count"}}

                    <div class="price">
                        
                        <label>מחיר לאחר הנחה</label>
                        <span class="discount">₪{{item.clubPriceTotal}}</span>
                        במקום
                        <span class="list">₪{{item.listPriceTotal}}</span>
                    </div>
                    
                    <span class="remove" {{action 'removeItem' item}}>&times;</span>

                </li>
            {{/each}}
        </ul>

        <div class="cart-totals">
            סך הכל לתשלום: ₪{{cart.total}} <br />
            <strong>סך הכל חיסכון: ₪{{cart.totalDiscount}}</strong>
        </div>

        <div class="cart-buttons">
            <button class="btn" {{action 'closeCart'}}>המשך בקניות</button>
            <button class="btn">עבור לקופה</button>
        </div>
        {{else}}
            <div class="empty-cart">
                אין פריטים בסל הקניות שלך.
            </div>
        {{/if}}
    </div>
</div>