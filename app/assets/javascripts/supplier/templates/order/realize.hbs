{{#view App.ModalView}}
<div class="modal-backdrop fade in"></div>
<div class="modal fade" tabindex="-1">
  <div class="modal-dialog" style="width: 30%;">
    <div class="modal-content">
      <div class="modal-header">        
        <h4 class="modal-title">
            מישמו הזמנה
        </h4>
      </div>     
      <div class="modal-body">
        <form>
          
        {{#if error}}
                <div class="alert alert-danger error">
                  <strong>שגיאה:</strong> {{error}}
                  <i class="fa fa-times" {{action 'close' controller}}></i>
                </div>
        {{/if}}
       
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th >שם לקוח</th>
              <th >שם פריט</th>
              <th class="min center">כמות</th>           
            </tr>
          </thead>

          <tbody>
              {{#each item in items}}
                  <tr>
                     <td >{{item.clientName}}</td>
                    <td >{{item.name}}</td>
                    <td class="min center">{{item.qty}}</td>
                  </tr>
              {{/each}}       
          </tbody>
        </table> 
        </form>
      </div>
      <div class="modal-footer">
        <div class="pull-right">
          <button {{action "closeWindow" }} type="button" class="btn btn-defualt active">סגור</button>
        
        </div>
        <div class="pull-left">
           <button {{action "realize" model view controller}} type="button" class="btn btn-success sendEnter">ממש</button>
        </div>
      </div>
       
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
{{/view}}