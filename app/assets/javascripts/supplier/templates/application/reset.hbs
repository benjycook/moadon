{{#view App.ModalView}}
<div class="modal-backdrop fade in"></div>
<div class="modal fade" tabindex="-1">
  <div class="modal-dialog" style="width: 400px;">
    <div class="modal-content">
      <div class="modal-header"><h4>איפוס סיסמא</h4></div>     
      <div class="modal-body">
        <form>
          {{input type="hidden" valueBinding="token"}}
        {{#if error}}
                <div class="alert alert-danger error">
                  <strong>שגיאה:</strong> {{error}} 
                  {{#if link}}
                   לאיפוס סיסמא <a {{action 'sendMail' model view}} class="resetLink">לחץ כאן</a>
                  {{/if}}
                  <i class="fa fa-times" {{action 'close' controller}}></i>
                </div>
        {{/if}}
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label>דוא"ל:</label>
                {{input type="text" class="form-control" valueBinding="email" required="required" data-parsley-type="email"}}
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label>סיסמה חדשה:</label>
                {{input type="text" class="form-control" valueBinding="password" required="required" id="valPass"}}
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label>אימות סיסמה חדשה:</label>
                {{input type="text" class="form-control" valueBinding="passwordConfirm" required="required" data-parsley-equalto="#valPass"}}
              </div>
            </div>

          </div>

        </form>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <button {{action "reset" model view controller}} type="button" class="btn btn-success sendEnter">בצע</button>
        </div>
      </div>
       
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
{{/view}}