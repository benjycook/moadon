{{#view App.ModalView}}
<div class="modal-backdrop fade in"></div>
<div class="modal fade" tabindex="-1">
  <div class="modal-dialog" style="width:710px;">
    <div class="modal-content">
      <div class="modal-header">
        {{#link-to 'suppliers' tag="button" type="button" class="close sendExit"}}&times;{{/link-to}}
        <h4 class="modal-title">
          {{#if id}}
            פרטי ספק
          {{else}}
            יצירת ספק
          {{/if}}
        </h4>
      </div>     
      <div class="modal-body">
        <form>
           {{#if error}}
                <div class="alert alert-danger error">
                  <strong>שגיאה:</strong> {{error}}
                  <i class="fa fa-times" {{action 'close' controller}}></i>
                </div>
          {{/if}}
          
         
          <div class="row">
                <div class="col-xs-2">
                  <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="#general" data-toggle="tab">כללי</a></li>
                    <li ><a href="#gallery" data-toggle="tab">גלריה</a></li>
                  </ul>
                </div>

                <div class="col-xs-10 tab-content">
                 {{partial "suppliers/tabs/general"}}
               
                 {{partial "suppliers/tabs/gallery"}}
                </div>
            </div> 
        </form>
      </div>
      <div class="modal-footer">
        {{#link-to 'suppliers' tag="button" type="button" class="btn btn-default"}}ביטול{{/link-to}}
        <div class="pull-left">
          <button {{action "save" model view controller}} type="button" class="btn btn-success sendEnter">שמור</button>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
{{/view}}