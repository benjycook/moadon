<div class="row tab-pane" id="items" style="margin: 0 40px;">
    <div class="panel panel-default grid">
         <div class="panel-heading">
            <div class="panel-label">בודדים</div>
        </div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                 <th class="min center">#</th>
                <th >שם המוצר</th>
                <th class="min center">בתוקף עד</th>
                 <th class="min center">מחיר מחירון</th>
                <th class="min center">מחיר מועדון</th>
               
                <th class="min center">מחיר נט</th>
                <th class="min center">ריווחיות</th>
                <th class="min center">סטטוס</th>
                <th class="min center">פעולות</th>
              </tr>
            </thead>

            <tbody class="single">
              {{#if model.singleItems.length}}
                {{#each item in model.singleItems itemController="Item"}}
                   <tr {{bind-attr data-id=item.id}}>
                      <td class="min center">
                        <i class="fa fa-bars"></id>
                      </td>
                      <td >{{item.name}}</td>
                      <td class="min center">{{item.displayDate}}</td>
                      <td class="min center">{{item.listPrice}}</td>
                      <td class="min center">{{item.clubPrice}}</td>
                      
                      <td class="min center">{{item.netPrice}}</td>
                      <td class="min center">{{item.profitPrecent}}</td>
                      <td class="min center">{{item.state}}</td>
                      <td class="min center">
                        <i class="fa fa-edit btn btn-primary btn-sm" {{action 'editItem' item}}></i>
                        {{#if item.removable}}
                          <i  {{action 'confirm' item.id }} class="btn btn-danger btn-sm fa fa-trash-o" style="margin-right:5px;" title="מחיקה"></i>
                        {{else}}
                          <i class="btn btn-danger btn-sm disabled fa fa-trash-o"  style="margin-right:5px;" title="מחיקה" ></i>
                        {{/if}}
                      </td>
                    </tr>
                {{/each}}
              {{/if}}               
            </tbody>
          </table> 

    

    </div>
    <div class="modal-footer">
        <div class="pull-right">
          <button class="btn btn-primary" {{action 'editItem' 0 1}}>הוסף מוצר</button>
        </div>    
    </div>
     <div class="panel panel-default grid">
    <div class="panel-heading" style="margin-top:10px;">
        <div class="panel-label">קבוצות</div>
    </div>

          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th class="min center">#</th>
                <th >שם המוצר</th>
                <th class="min center">בתוקף עד</th>
                
                <th class="min center">מחיר מחירון</th>
                 <th class="min center">מחיר ישיר</th>
                <th class="min center">מחיר מועדון</th>
                <th class="min center">מחיר נט</th>
                <th class="min center">ריווחיות</th>
                <th class="min center">סטטוס</th>
                <th class="min center">פעולות</th>
              </tr>
                  

            </thead>

            <tbody class="group">
              {{#if model.groupItems.length}}
                {{#each item in model.groupItems itemController="Item"}}
                   <tr {{bind-attr data-id=item.id}}>
                      <td class="min center">
                        <i class="fa fa-bars"></id>
                      </td>
                      <td >{{item.name}}</td>
                      <td class="min center">{{item.displayDate}}</td>
                      
                      <td class="min center">{{item.listPriceGroup}}</td>
                      <td class="min center">{{item.listPrice}}</td>
                      <td class="min center">{{item.priceGroup}}</td>
              
                      <td class="min center">{{item.netPriceGroup}}</td>
                      <td class="min center">{{item.profitPrecentGroup}}</td>
                      <td class="min center">{{item.state}}</td>
                      <td class="min center">
                        <i class="fa fa-edit btn btn-primary btn-sm" {{action 'editItem' item}}></i>
                        {{#if item.removable}}
                          <i  {{action 'confirm' item.id }} class="btn btn-danger btn-sm fa fa-trash-o" style="margin-right:5px;" title="מחיקה"></i>
                        {{else}}
                          <i class="btn btn-danger btn-sm disabled fa fa-trash-o"  style="margin-right:5px;" title="מחיקה" ></i>
                        {{/if}}
                      </td>
                    </tr>
                {{/each}}
              {{/if}}               
            </tbody>
          </table> 
      </div>
    <div class="modal-footer">
        <div class="pull-right">
          <button class="btn btn-primary" {{action 'editItem' 0 2}}>הוסף מוצר</button>
        </div>    
    </div>
</div>
