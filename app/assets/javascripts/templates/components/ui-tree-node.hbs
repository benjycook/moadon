<div class="tree-row">

	<span {{bind-attr class=":toggle-icon node.children.length::leaf"}} >
			{{#if isBranch}}
				{{#if isOpen}}
		      <i class="fa fa-caret-down" {{action 'expend'}}></i>
		    {{else}}
		      <i class="fa fa-caret-left" {{action 'expend'}}></i>
		    {{/if}}
		  {{/if}}

			{{#if isSelectable}}
				{{#if isSelected}}
		      <i class="fa fa-check-square-o" {{action 'select'}}></i>
		    {{else}}
		      <i class="fa fa-square-o" {{action 'select'}}></i>
		    {{/if}}
			{{/if}}
	</span>

	{{#if isEditable}}
	  {{input type="text" value=node.name focus-out="toggleEdit"}}
	{{else}}
	  <a class="text" title="לחץ לעריכה" {{action 'toggleEdit'}}>{{node.name}}</a>
	{{/if}}

	{{#if allowEdit}}
		<div class="pull-left">
			<span class="badge">{{node.children.length}}</span>
			{{#if isDeletable}}
				<i class="fa fa-trash" {{action 'remChild' node}}></i>
			{{else}}
				<i class="fa fa-trash disabled"></i>
			{{/if}}
		</div>
	{{/if}}
</div>

{{#if isOpen}}
  {{ui-tree node=node}}
  {{#if allowAdd}}
 	 <span class="tree-add" {{action 'addChild'}}><i class="fa fa-plus-circle"></i>הוסף</span>
 	{{/if}}
{{/if}}

