<div {{bind-attr class=":row :tab-pane first:active" id=id}} style="margin-top:10px;">
  <div class="col-md-12">
    {{#if error}}
      <div class="alert alert-danger error">
        <strong>שגיאה:</strong> {{error}}
        <i class="fa fa-times" {{action 'close' controller}}></i>
      </div>
    {{/if}}
    {{#if success}}
      <div class="alert alert-success success">
        {{success}} 
        <i class="fa fa-times" {{action 'close' controller}}></i>
      </div>
    {{/if}}
    {{#view App.FormView}}
      <form autocomplete="off">

          <div class="row">
             <div class="col-md-12">
                <div class="form-group">
                  <label>{{name}}:</label>
                  {{ui-rte html=text}}
                </div>
             </div>
          </div>

      </form>
      
      <div class="modal-footer">
            <div class="pull-left">
               <div class="pull-left">
                  <button {{action 'save'  model view controller}} type="button" class="btn btn-success">שמור</button>
                </div>
            </div>
      </div>

    {{/view}}

  </div>
</div>