{{#link-to 'cities.edit' view.content.id class="btn btn-primary btn-sm"}}<i class="fa fa-edit"></i>{{/link-to}}
{{#if view.content.removable}}
	<a class="btn btn-danger btn-sm" {{action 'confirm' controller view.content.id }} style="margin-right:5px;"><i class="fa fa-trash-o"></i></a>
{{else}}
	<a class="btn btn-danger btn-sm disabled" style="margin-right:5px;"><i class="fa fa-trash-o"></i></a>
{{/if}}